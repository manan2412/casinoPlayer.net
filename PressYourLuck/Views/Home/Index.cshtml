<h1>Welcome, @CoinsHelper.GetName(Context)</h1>
@*<h2>@CurrentBet</h2>*@
<form method="post" asp-action="Index">
    <div class="form-group">
        <label class="control-label">How many coins would you like to wager?</label>
        <input style="width:40%" asp-for="@Model.OriginalBet" class="form-control" placeholder="0.00">
        <span asp-validation-for="@Model.TotalCoins" class="text-danger"></span>
        @if (ViewBag.Error != "")
        {
            <span class="text-danger">@ViewBag.Error</span>
        }
    </div>

    <button asp-controller="Home" class="btn btn-primary">Join the Game</button>
</form>